<%- include('header.ejs') %>

	<div class="auth-box">
		<div class="auth-lft">
			
		</div>

		<div class="auth-rgt">
			<div class="auth-container">
				<div>
					LOGO
				</div>
				<div class="auth-head">
					Sign In
				</div>
				<div>
					<form >
						<div class="auth-fld">
								<input id="email" type="text" name="user_useremail" class="auth-fld-inp" required>
								<label for="email" class="auth-fld-lbl">
									Email
								</label>
							</div>
							
							<div class="auth-fld">
								<input id="password" type="text" name="password" class="auth-fld-inp" required>
								<label for="password" class="auth-fld-lbl">
									Password
								</label>
								
							</div>

							<div>
								<a href="/forgot-password-auth" class="clnk">
									Forgot Password
								</a>
							</div>
						
						</div>
						<div class="auth-btn" onclick="signIn(this);">
							<span>
								Sign In
							</span>
						</div>

						<div class="auth-sec">
							<span>
								New User ?								
							</span>
							<a href="/signup-auth" class="clnk">
								Sign Up Now
							</a>
						</div>
					</form>

			</div>
			<div class="auth-notify" id="auth_notify">
				<div class="auth-notify-lbl">
					
				</div>
			</div>
		</div>

	</div>
<%- include('footer.ejs') %>
