<%- include('header.ejs') %>
	<div class="auth-box">
		<div class="auth-lft">
			<div class="auth-lft-imgb">
				<img src="../images/auth-bg.svg" class="auth-lft-img">
			</div>
			<div class="auth-lft-txt">
				Sign In Now to get your Free Buisness Card
			</div>
		</div>

		<div class="auth-rgt">
			<div class="auth-container">
				<div class="auth-logo"> 
					<img src="../images/aristos-tech-logo-color.png" class="auth-logo-img" />
				</div>
				<div class="auth-sec">
					<span>
						Already Existing User?								
					</span>
					<a href="/signin-auth" class="clnk">
						Sign In
					</a>
				</div>
				<div class="auth-head">
					Register
				</div>
				<div>
					  <form class="form_data">
							<div class="auth-fld">
								<input id="username" type="text" name="user_username" class="auth-fld-inp" required autocomplete="off">
								<label for="username" class="auth-fld-lbl">
									<span class="auth-fld-txt">
										UserName										
									</span>
									<span class="auth-req">
										*
									</span>
								</label>
								<div class="auth-fld-close dn" onclick="fldClear(this);">
								</div>
							</div>
							<div class="auth-fld">
								<input id="email" type="text" name="user_email" class="auth-fld-inp" required autocomplete="off">
								<label for="email" class="auth-fld-lbl">
									<span class="auth-fld-txt">
										Email
									</span>
									<span class="auth-req">
										*
									</span>
								</label>
								<div class="auth-fld-close dn" onclick="fldClear(this);">
								</div>
							</div>
							<div class="auth-fld">
								<input id="business_name" type="text" name="user_business_name" class="auth-fld-inp" required autocomplete="off">
								<label for="business_name" class="auth-fld-lbl">
									<span class="auth-fld-txt">
										Business Name
									</span>
								</label>
								<div class="auth-fld-close dn" onclick="fldClear(this);">
								</div>
							</div>
							<div class="auth-fld">
								<input id="business_nature" type="text" name="user_business_nature" class="auth-fld-inp dn" required>
								<label for="business_nature" class="auth-fld-lbl" style="pointer-events: none;">
									<span class="auth-fld-txt">
										Business Nature
									</span>
								</label>
								<div class="auth-sel-box" onclick="selectBoxOpen(this);">
									<div class="auth-sel-head">
										<div class="auth-sel-lbl" id="business_nature_val">
											
										</div>
										<div class="auth-sel-arr">
										</div>
									</div>
									<div class="auth-sel-opts dn">
										<div class="auth-sel-opt" onclick="selectBoxOptionSelected(this);">
											<div class="auth-sel-txt">Manufacture/ Export</div>
										</div>
										<div class="auth-sel-opt" onclick="selectBoxOptionSelected(this);">
											<div class="auth-sel-txt">Trader</div>
										</div>
										<div class="auth-sel-opt" onclick="selectBoxOptionSelected(this);">
											<div class="auth-sel-txt">Service Provider</div>
										</div>
										<div class="auth-sel-opt" onclick="selectBoxOptionSelected(this);">
											<div class="auth-sel-txt">Freelancer</div>
										</div>
										
										
									</div>
								</div>
							</div>
							<div class="auth-fld">
								<div class="auth-fr">
									<label class="auth-checkbox" onclick="termsConditionsCheck(this);"> 
										<input type="checkbox" id="tc_check" name="">
										<div class="auth-check">
										</div>
										<div>
											<span>
												I Accept the
											</span>
											<a class="clnk" href="#">Terms</a>
										</div>
									</label>
									
								</div>
							</div>
						</div>
						<div class="auth-btn auth-disable" onclick="registerUser(this);">
							<span>
								Next
							</span>
						</div>
						
					</form>

			</div>
			<div class="auth-notify" id="auth_notify">
			</div>
			
		</div>

	</div>

